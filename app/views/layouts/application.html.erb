<!DOCTYPE html>
<html>
  <head>
    <title>Team</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'main_vue' %>
  </head>

  <body>
    <v-app id="main-app">
      <v-navigation-drawer temporary v-model="sideNav">
        <v-list>
          <v-list-tile>
            <v-list-tile-action>
              <v-icon>lock_open</v-icon>
            </v-list-tile-action>
            <v-list-tile-contenct>Sign In</v-list-tile-contenct>
          </v-list-tile>
          <v-list-tile>
            <v-list-tile-action>
              <v-icon>face</v-icon>
            </v-list-tile-action>
            <v-list-tile-contenct>Sign Up</v-list-tile-contenct>
          </v-list-tile>
        </v-list>
      </v-navigation-drawer>
      <v-toolbar dark class="primary">
        <v-toolbar-side-icon class="hidden-sm-and-up" @click.stop="sideNav=!sideNav"></v-toolbar-side-icon>
        <v-toolbar-title>tm-mgr</v-toolbar-title>
        <v-spacer></v-spacer>
        <v-toolbar-items class="hidden-xs-only">
          <v-btn flat>
            <v-icon left>lock_open</v-icon>
            Sign In
          </v-btn>
          <v-btn flat>
            <v-icon left>face</v-icon>
            Sign Up
          </v-btn>
        </v-toolbar-items>
      </v-toolbar>

      <%= yield %>

    </v-app>
  </body>
</html>
